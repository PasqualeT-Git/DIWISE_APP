<div class="container">
  <div class="row justify-content-center mt-3">
    <% if @packets.empty? %>
      <h2>You haven't added any packet yet!</h2>
    <% else %>
    <div>
      <h3><strong><%= @project.title %></strong></h3>
    </div>
    <div class="container grid p-3">
      <%= render 'shared/packet_card', packets: @packets %>
    </div>
    <% end %>
  </div>

  <div class="row justify-content-center mb-3">
    <%= link_to "Back", user_path(current_user), class: "btn btn-warning" %>
  </div>
</div>
