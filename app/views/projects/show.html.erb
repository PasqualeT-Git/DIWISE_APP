<div class="container">
  <div class="row justify-content-center mt-5">
    <% if @packets.empty? %>
        <h2 >You haven't added any packets yet!</h2>
    <% else %>
      <div>
        <h3><strong><%= @project.title %></strong></h3>
        <div class="border-bottom"></div>
      </div>
      <div class="container">
        <ul>
          <% @display_tools.each do |tool| %>
            <li><%= tool.name %></li>
          <% end %>
        </ul>
       
      </div>
      <div class="container grid p-5">
        <div class="project-cards">
          <%= render 'shared/packet_card', packets: @packets %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-around mb-5">
    <%= link_to "Find packets", packets_path, class: "btn btn-warning" %>
    <%= link_to "Create packet", new_packet_path, class: "btn btn-warning" %>
    <%= link_to "Back", user_path(current_user), class: "btn btn-warning" %>

  </div>
</div>

