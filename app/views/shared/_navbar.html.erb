<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-diwise">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
    DI-WISE
  <% end %>
  
  <!-- Search Form -->
  <div class="navbar-left">
   <% render "shared/filter_form" %>
  </div>
  <!-- Nav Buttons -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class = "navbar-nav mr-auto">
      <li class= "nav-item active">
        <%= link_to "Categories", "#", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Browse All DIY", packets_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class = "nav-item active nav-dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-plus-circle"> </i></a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a><%= link_to "My Account", user_path(current_user), class: "dropdown-item" %></a>
            <a><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></a>
          </div>
        </li>
        <% else %>
          <li class="nav-item active">
            <a><%= link_to "Login", new_user_session_path, class: "nav-link" %></a>
          </li>
      <% end %>
   </ul> 
  </div>
</div>

