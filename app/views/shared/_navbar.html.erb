<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-diwise">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
    DI-WISE
  <% end %>

  <!-- Search Form DON'T TOUCH - PAWS OFF  -->
  <div class="filter-form">
    <%= form_tag packets_path, class: 'form-inline', method: :get do %>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Browse" %>
      <%= submit_tag "Search", class: "btn btn-success"%>
    <% end %>
  </div>

  <!-- Nav Buttons -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class = "navbar-nav my-auto ">
      <li class= "nav-item active">
        <%= link_to "Categories", "#", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "All DIY Lessons", packets_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar-bordered dropdown-toggle", id:"navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <a class="dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span style="font-size: 2rem;">
                <span style="color: #6dde89;">
                  <i class="fas fa-plus-circle"></i>
                </span>
              </span>
            </a>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Account", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
          <li class="nav-item active">
            <a><%= link_to "Login", new_user_session_path, class: "nav-link" %></a>
            <a><%= link_to "Sign Up", new_user_registration_path, class: "nav-link"%></a>
          </li>
      <% end %>
   </ul>
  </div>
</div>

